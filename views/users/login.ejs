<%- include('../partials/header.ejs') %>
  <!-- Auth Container -->
  <main class="container mx-auto px-4" id="login-page">
    <div class="max-w-4xl mx-auto my-12 md:flex gap-4 justify-center items-start ">
        <!-- Login Up Form -->
        <div class="md:w-1/2 mb-4">
            <h1 class="text-4xl mb-4 font-heading">Log In</h1>
            <form class="bg-secondary p-8 rounded-lg text-white" action="loginUser" method="POST">
                <div class="mb-6">
                    <label class="block text-xl mb-2">Email</label>
                    <input type="email" placeholder="Enter your email" id="email" name="email"  class="w-full p-3 rounded text-gray-500">
                </div>
                <div class="mb-6">
                    <label class="block text-xl mb-2">Password</label>
                    <input type="password" placeholder="Enter your password" name="password" id="password" class="w-full p-3 rounded text-gray-500">
                </div>
                <button type="submit" id="form-btn" class="w-full bg-gray-400 text-secondary py-3 rounded hover:bg-gray-500 hover:text-white transition duration-300">
                    Login
                </button>
                <p id="error-message" class="text-red-400 mt-3 hidden">Please fill out all fields.</p>
            </form>
        </div>

        

       <!-- Google Login -->
       <div class="md:w-1/2">
           <h2 class="text-4xl mb-4 font-heading">Login with google</h2>
           <a href="/auth/google" class="w-full bg-secondary p-4 rounded-lg flex items-center justify-center space-x-4 hover:bg-gray-600 transition duration-300">
               <span class="text-2xl text-white">
                <i class="fa-brands fa-google"></i>
            </span>
               <span class="text-xl text-white">Google</span>
        </a>
       </div>
    </div>

     
  </main>

<%- include('../partials/footer.ejs') %>
