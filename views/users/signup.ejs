<%- include('../partials/header.ejs') %>
  <!-- Auth Container -->
  <main class="container mx-auto px-4" id="signup-page">
    <div class="max-w-4xl mx-auto my-12 flex justify-center space-x-12">
          <!-- Flash Messages -->
          <% if (messages.error && messages.error.length > 0) { %>
            <div class="alert alert-danger">
                <% messages.error.forEach(msg => { %>
                    <p><%= msg %></p>
                <% }); %>
            </div>
        <% } %>
        <% if (messages.success && messages.success.length > 0) { %>
            <div class="alert alert-success">
                <% messages.success.forEach(msg => { %>
                    <p><%= msg %></p>
                <% }); %>
            </div>
        <% } %>
        <!-- Sign Up Form -->
        <div class="w-1/2 ">
            <h1 class="text-4xl mb-4 font-heading">Sign UP</h1>
            <form class="bg-secondary p-8 rounded-lg text-white" action="registerUser" method="POST">
                <div class="mb-6">
                    <label class="block text-xl mb-2">Username</label>
                    <input type="text" placeholder="Enter your username"  name="username" id="username" class="w-full p-3 rounded text-gray-500">
                </div> 
                    <div class="mb-6">
                    <label class="block text-xl mb-2">Email</label>
                    <input type="email" placeholder="Enter your email"  id="email" name="email" class="w-full p-3 rounded text-gray-500">
                </div>
                <div class="mb-6">
                    <label class="block text-xl mb-2">Password</label>
                    <input type="password" placeholder="Enter your password"  name="password" id="password" class="w-full p-3 rounded text-gray-500">
                </div>
                <button type="submit" id="form-btn" class="w-full bg-gray-400 text-secondary py-3 rounded hover:bg-gray-500 hover:text-white transition duration-300">
                    Sign Up
                </button>
                <p id="error-message" class="text-red-400 mt-3 hidden">Please fill out all fields.</p>
            </form>
        </div>

          <!-- Divider -->
       <div class="w-px bg-gray-300"></div>

       <!-- Google Login -->
       <div class="w-1/2">
           <h2 class="text-4xl mb-8 font-heading">Sign Up with google</h2>
           <a href="/auth/google" class="w-full bg-secondary p-4 rounded-lg flex items-center justify-center space-x-4 hover:bg-gray-600 transition duration-300">
               <span class="text-2xl text-white">
                <i class="fa-brands fa-google"></i>
            </span>
               <span class="text-xl text-white">Google</span>
           </a>
       </div>
    </div>

     
  </main>


<%- include('../partials/footer.ejs') %>
